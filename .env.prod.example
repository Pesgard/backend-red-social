# .env.prod.example
# Copia este archivo a .env.prod y actualiza con valores reales

# ====================================
# Docker Configuration
# ====================================
DOCKER_USERNAME=tu_usuario_dockerhub

# ====================================
# MongoDB Configuration
# ====================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=genera_password_super_seguro_aqui

# ====================================
# Application Configuration
# ====================================
NODE_ENV=production
PORT=3000

# ====================================
# JWT Configuration
# ====================================
# Genera con: openssl rand -base64 32
JWT_SECRET=genera_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d

# ====================================
# CORS Configuration
# ====================================
CORS_ORIGIN=https://tu-dominio.com

# ====================================
# File Upload Configuration
# ====================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# ====================================
# Rate Limiting Configuration
# ====================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100